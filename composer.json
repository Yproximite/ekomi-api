{
  "name": "yproximite/ekomi-api",
  "type": "library",
  "description": "Client library for eKomi API",
  "license": "MIT",
  "authors": [
    {
      "name": "Nikita Sviridenko",
      "email": "mail.sviridenko@gmail.com"
    }
  ],
  "scripts": {
    "php-cs-fixer": "php-cs-fixer fix -v",
    "php-cs-fixer@ci": "php-cs-fixer fix -v --diff --dry-run",
    "phpspec": "phpspec run -n"
  },
  "require": {
    "php": "^8.0",
    "symfony/cache": "^5.4 || ^6.0",
    "symfony/http-client": "^5.4 || ^6.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.8",
    "phpspec/phpspec": "^7.0",
    "phpstan/phpstan": "^1.6",
    "phpstan/phpstan-strict-rules": "^1.2",
    "rector/rector": "^0.12.23",
    "symfony/var-dumper": "^5.4 || ^6.0"
  },
  "config": {
    "bin-dir": "bin",
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "Yproximite\\Ekomi\\Api\\": "src"
    }
  }
}
